<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link rel="stylesheet" href="http://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
    <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <link rel="stylesheet" type="text/css" href="http://ws1.postescanada-canadapost.ca/css/addresscomplete-2.30.min.css?key=mc82-bz64-rw92-xr71" />
    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.3.1/css/bootstrap-grid.css" />
    <script type="text/javascript" src="http://ws1.postescanada-canadapost.ca/js/addresscomplete-2.30.min.js?key=mc82-bz64-rw92-xr71"></script>
    <script>
        $(document).ready(function () {
            //$('#productName').autocomplete({
            //    source: '/api/product/search'
            //});

            $("#save-wm-call").on("click",
                function (e) {
                    e.preventDefault();
                    var that = this;
                    var postCode = $("#postCode").val();
                    //var isMemberSearch = $("#is-memberSearch").val();

                    $.ajax({
                        url: "/CanadaPost/Index2",
                        type: "GET",
                        contentType: "application/json",
                        //data: JSON.stringify({ postCode: postCode })
                        data: { postCode: postCode }
                    }).done(function (data) {
                        alert(data);
                    }).fail(function (xhr, ajaxOptions, thrownError) {
                        alert(thrownError);
                    })
                });


        });
    </script>
</head>
<body>

    <h3>Canada Post Address Search</h3>
    <div class="container">
        <div id="confirmWMCall" class="modal fade" role="dialog">
            <div class="modal-content">
                <input type="hidden" id="wm-id" />
                <input type="hidden" id="is-memberSearch" />
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Address Search</h4>
                </div>
                <div class="modal-body">
                    <form class="form-horizontal" role="form">
                        <div class="form-check">
                            <input class="form-check-input" type="text" name="wm-reason" id="postCode">
                            <label class="form-check-label" for="wm-reason1">
                                Zip Code
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="text" name="wm-reason" id="location">
                            <label class="form-check-label" for="wm-reason2">
                                Location
                            </label>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" id="save-wm-call" class="btn">Submit</button>
                </div>
            </div>
        </div>
    </div>
</body>
</html>